<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PreferenceCategory">
        <item name="android:layout">@layout/preference_category</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/commonTitle</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="commonTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/primary_text_holo_dark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="commonSubTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/secondary_text_holo_dark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:paddingRight">@dimen/default_padding_small</item>
        <item name="android:paddingLeft">@dimen/default_padding_small</item>
        <item name="android:background">@drawable/divider</item>
    </style>
    
     <style name="HorizontalDivider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingRight">@dimen/default_padding_small</item>
        <item name="android:paddingLeft">@dimen/default_padding_small</item>
        <item name="android:background">@drawable/divider</item>
    </style>

    <style name="StreamDialogTableRow">
        <item name="android:padding">10dp</item>
    </style>

    <style name="HeaderContainer">
        <item name="android:background">@drawable/ab_background</item>
    </style>

</resources>